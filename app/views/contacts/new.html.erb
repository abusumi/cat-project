<div class="flex justify-center">
  <div class="container p-5 bg-light max-w-2xl mx-2 my-2 bg-white p-4 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-4 text-center">お問い合わせ</h1>
    <div class="flex rounded justify-center px-3 md:px-4 mx-2 md:mx-4 mb-4">
      <div class="flex flex-col w-full mt-6 mb-4 md:mb-6 mx-4 md:mx-6">
        
        <%= form_with model: @contact, url: confirm_contacts_path, data: { turbo: false }, local: true do |f| %>
          
          <div class="form-group mb-4">
            <%= f.label :name, 'お名前', class: 'font-zen' %><span class="text-danger text-secondary ml-1">*</span>
            <%= f.text_field :name, autofocus: true, class: 'bg-white border border-gray-300 text-sm w-full rounded-lg focus:ring-primary focus:border-primary block p-2.5' %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :email, 'メールアドレス', class: 'font-zen' %><span class="text-danger text-secondary ml-1">*</span>
            <%= f.email_field :email, class: 'bg-white border border-gray-300 text-sm w-full rounded-lg focus:ring-primary focus:border-primary block p-2.5' %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :title, '件名', class: 'font-zen' %><span class="text-danger text-secondary ml-1">*</span>
            <%= f.text_area :title, class: 'bg-white border border-gray-300 text-sm w-full rounded-lg focus:ring-primary focus:border-primary block p-2.5', rows: 3 %>
          </div>

          <div class="form-group mb-4">
            <%= f.label :message, 'メッセージ', class: 'font-zen' %><span class="text-danger text-secondary ml-1">*</span>
            <%= f.text_area :message, size: '10x10', class: 'bg-white border border-gray-300 text-sm w-full rounded-lg focus:ring-primary focus:border-primary block p-2.5', rows: 5 %>
          </div>

          <div class="text-center">
            <%= f.submit '入力内容確認', class: "btn btn-info btn-lg px-5 py-2 rounded-lg shadow-md hover:bg-blue-600 transition duration-300" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
