<div class="flex justify-center">
  <div class="container p-2 bg-light max-w-2xl mx-2 my-2 bg-white rounded-lg shadow-md">
      <div class="col-md-8">
        <h2 class="text-center mb-4 text-gray-800 font-bold">入力内容確認</h2>

        <table class="table table-bordered mb-4">
          <tbody>
            <tr>
              <td class="text-right" style="width: 30%; font-weight: bold;">お名前</td>
              <td><%= @contact.name %></td>
            </tr>
            <tr>
              <td class="text-right" style="width: 30%; font-weight: bold;">メールアドレス</td>
              <td><%= @contact.email %></td>
            </tr>
            <tr>
              <td class="text-right" style="width: 30%; font-weight: bold;">件名</td>
              <td><%= @contact.title %></td>
            </tr>
            <tr>
              <td class="text-right" style="font-weight: bold;">メッセージ</td>
              <td style="white-space: pre-wrap; word-wrap: break-word;"><%= @contact.message %></td>
            </tr>
          </tbody>
        </table>

        <div class="d-flex justify-content-between">
          <div>
            <%= form_with model: @contact, method: :post, data: { turbo: false }, local: true do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :title %>
              <%= f.hidden_field :message %>
              <div class="text-center my-2">
                <%= f.submit '送信', class: "btn btn-success btn-lg px-5 py-2 rounded-lg shadow-md hover:bg-green-600 transition duration-300" %>
              </div>
            <% end %>
          </div>

          <div>
            <%= form_with model: @contact, url: back_contacts_path, data: { turbo: false }, local: true do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :title %>
              <%= f.hidden_field :message %>
              <div class="text-center">
                <%= f.submit '入力画面に戻る', class: "btn btn-info btn-lg px-5 py-2 rounded-lg shadow-md hover:bg-blue-600 transition duration-300" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
