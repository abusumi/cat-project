<div class="container mx-auto my-8 p-4 bg-gray-100 rounded-lg shadow" style="max-width: 100%;">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">フード一覧</h1>

  <div class="grid" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 1.5rem;">
    <% @foods.each do |food| %>
      <div class="food-card p-4 bg-white shadow-md rounded-lg text-center w-full">
        <%= image_tag "placeholder.png", alt: food.name, class: "w-full h-40 object-cover rounded-md mb-4" %>
        <h3 class="text-lg font-semibold text-gray-800 break-words"><%= food.name %></h3>
        <p class="text-sm text-gray-600 mt-2"><%= food.brand.name %></p>
        <%= link_to '製品を表示', food_path(food), class: "inline-block mt-4 px-4 py-2 text-sm text-white bg-blue-500 rounded hover:bg-blue-600" %>
      </div>
    <% end %>
  </div>
</div>
