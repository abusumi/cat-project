<div class="max-w-md my-4 mx-auto bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-6"><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-2">
      <%= f.label :name, class: "block font-medium text-gray-700" %>
      <%= f.text_field :name, placeholder: "10文字まで", autofocus: true, autocomplete: "name", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="space-y-2">
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: "block font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500">(<%= @minimum_password_length %><%= t('.characters_minimum') %>)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", id: "password_field", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400" %>
      <div class="flex items-center space-x-2">
        <%= check_box_tag 'show_password', '1', false, onclick: 'togglePasswordVisibility()', class: "form-checkbox" %>
        <%= label_tag 'show_password', t('devise.registrations.new.show_password'), class: "text-gray-700" %>
      </div>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password_confirmation_field", class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400" %>
      <div class="flex items-center space-x-2">
        <%= check_box_tag 'show_password_confirmation', '1', false, onclick: 'togglePasswordConfirmationVisibility()', class: "form-checkbox" %>
        <%= label_tag 'show_password_confirmation', t('.show_password_confirmation'), class: "text-gray-700" %>
      </div>
    </div>

    <div>
      <%= f.submit t('.sign_up'), class: "w-full py-2 text-white bg-blue-500 hover:bg-blue-600 rounded-lg font-semibold transition cursor-pointer" %>
    </div>
  <% end %>

  <!-- ーまたはー アカウント登録のボタン -->
  <div class="mt-6 flex justify-center items-center divider text-xs pb-4">または</div>
    <!-- Googleログインボタン -->
    <div class="mt-1">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false } do %>
        <button class="w-full flex items-center justify-center gap-2 py-2 border border-gray-300 rounded-lg shadow-sm hover:bg-gray-100 transition">
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"/>
            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"/>
            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"/>
            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"/>
            <path fill="none" d="M0 0h48v48H0z"/>
          </svg>
          <span class="text-sm font-medium text-gray-700">Sign in with Google</span>
        </button>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>

<script>
function togglePasswordVisibility() {
  const passwordField = document.getElementById("password_field");
  passwordField.type = passwordField.type === "password" ? "text" : "password";
}

function togglePasswordConfirmationVisibility() {
  const passwordConfirmationField = document.getElementById("password_confirmation_field");
  passwordConfirmationField.type = passwordConfirmationField.type === "password" ? "text" : "password";
}
</script>
