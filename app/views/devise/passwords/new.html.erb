<div class="max-w-md mx-auto my-4 bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-center mb-6"><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="space-y-4">
      <!-- Emailフィールド -->
      <div class="space-y-2">
        <%= f.label :email, class: "block text-gray-700 font-medium" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500" %>
      </div>

      <!-- パスワードリセットのボタン -->
      <div>
        <%= f.submit t('.send_me_reset_password_instructions'), class: "w-full py-2 text-white bg-blue-500 hover:bg-blue-600 rounded-md font-semibold transition" %>
      </div>
    </div>
  <% end %>

  <!-- Deviseのリンク -->
  <div class="mt-6 flex justify-center items-center divider text-xs border-b border-gray-300 pb-4">または</div>
    <%= render "devise/shared/links" %>
  </div>
</div>
