<h1 class="text-2xl font-bold mb-6"><%= @food.name %>のカスタマーレビュー</h1>

<% @reviews.each do |review| %>
  <div class="p-4 bg-white border border-gray-200 rounded-lg shadow-md mb-4">
    <!-- ユーザー情報 -->
    <div class="flex items-center">
      <%= link_to image_tag(review.user.profile.attached? ? review.user.profile : 'account.png', class: 'w-10 h-10 rounded-full object-cover border border-gray-300 mr-3'), user_path(review.user) %>
      <%= link_to review.user.name, user_path(review.user), class: 'text-lg font-semibold text-gray-800' %>
    </div>
    <!-- 星評価 -->
    <div class="flex items-center mt-2 mb-2">
      <% 5.times do |i| %>
        <% if i < review.rating %>
          <!-- 塗りつぶし星 -->
          <svg class="w-5 h-5 text-yellow-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
            <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
          </svg>
        <% else %>
          <!-- 空の星 -->
          <svg class="w-5 h-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
            <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
          </svg>
        <% end %>
      <% end %>
    </div>

    <!-- コメント -->
    <p class="text-gray-700"><span class="material-icons mr-2" style="font-size: 1.5em; vertical-align: middle;">comment</span><%= review.comment %></p>

    <!-- 投稿日 -->
    <p class="text-sm text-gray-500 mt-2">
      <span class="material-icons" style="font-size: 1.5em; vertical-align: middle;">calendar_month</span>
      投稿日: <%= review.created_at.strftime('%Y-%m-%d %H:%M') %>
    </p>  
    </div>
<% end %>

<!-- 戻るボタン -->
<div class="mt-6">
  <%= link_to "フード詳細に戻る", food_path(@food.id), class: "px-4 py-2 font-semibold text-white bg-blue-500 rounded-md hover:bg-blue-600 transition" %>
</div>
