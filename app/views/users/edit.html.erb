<div class="bg-white">
  <div class="flex flex-col justify-center items-center mt-6 mb-6 mx-72">
    <h1 class="text-3xl font-bold text-accent text-center">ユーザープロフィール編集</h1>
  </div>
  <%= form_with(model: @user, method: :patch, data: { turbo: false }) do |f| %>
    <div class="my-4">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="my-4">
      <h2>プロフィール画像</h2>
      <%= f.file_field :profile %>
    </div>
    <div class="my-4">
      <%= f.label :self_introduction %>
      <%= f.text_area :self_introduction %>
    </div>
    <div class="my-4">
      <%= f.submit '更新する', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
