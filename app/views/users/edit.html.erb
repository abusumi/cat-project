<h1 class="text-center mb-6 mt-2 text-2xl text-default">ユーザープロフィール編集</h1>

<div class="flex items-center justify-center">
  <div class="w-full max-w-2xl bg-white p-8 rounded-lg shadow-md">
    <%= form_with(model: @user, method: :patch, data: { turbo: false }, class: "space-y-6") do |f| %>
      <div>
        <%= f.label :name, class: "block text-lg font-medium text-gray-700" %>
        <%= f.text_field :name, placeholder: "10文字まで", class: "mt-2 w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <h2 class="text-lg font-medium text-gray-700">プロフィール画像</h2>
        <%= f.file_field :profile, class: "mt-2 block w-full text-gray-700 border border-gray-300 rounded-lg cursor-pointer bg-white focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div>
        <%= f.label :self_introduction, class: "block text-lg font-medium text-gray-700" %>
        <%= f.text_area :self_introduction, placeholder: "250文字まで", class: "mt-2 w-full h-32 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
      <div class="flex justify-center">
        <%= f.submit '更新する', class: "w-full sm:w-auto px-6 py-2 text-lg font-semibold text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-md" %>
      </div>
    <% end %>
  </div>
</div>
