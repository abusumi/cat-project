<p>猫を登録する</p>
<div class="bg-white">
  <div class="flex flex-col justify-center items-center mt-6 mb-6 mx-72">
    <h1 class="text-3xl font-bold text-accent text-center">猫プロフィール編集</h1>
  </div>
  <%= form_with(model: @cat, url: user_cats_path(@user), method: :post, data: { turbo: false }) do |f| %>
    <div class="my-4">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="my-4">
      <h2>画像</h2>
      <%= f.file_field :cat_profile %>
    </div>
    <div class="my-4">
      <%= f.label :cat_introduction %>
      <%= f.text_area :cat_introduction, class: "resize-none h-32 w-full border border-gray-300 rounded-md" %>
    </div>
    <div class="my-4">
      <%= f.label :weight %>
      <%= f.text_field :weight %>
    </div>
    <div class="my-4">
      <%= f.submit '登録する', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
