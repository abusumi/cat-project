<h1 class="text-center mb-6 mt-2 text-3xl text-default">みんなのペット</h1>
<div class="my-2 mx-2">
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <%= render partial: "shared/cat_card", collection: @cats, as: :cat %>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to new_user_cat_path(current_user) do %>
    <div class="bg-default border-4 border-white p-4 rounded-full shadow-lg fixed bottom-6 right-6 flex items-center justify-center w-16 h-16 z-50 pointer-events-auto">
      <i class="fa fa-plus text-white text-2xl"></i>
    </div>
  <% end %>
<% end %>
